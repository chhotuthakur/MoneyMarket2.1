<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/shape2"
    android:layout_margin="8dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/totalInvestmentTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Investment: $1000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/totalProfitLossTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profit/Loss: $50"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/totalArrowIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_up"
            android:contentDescription="Arrow Icon" />

    </LinearLayout>

    <!-- Company Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/companyNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Company: ABC Inc."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/investedValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invested: $500"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/currentValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current: $550"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/profitLossArrowIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_up"
            android:contentDescription="Arrow Icon" />

    </LinearLayout>
</LinearLayout>
